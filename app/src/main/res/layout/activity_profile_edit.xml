<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="#E5E5E5"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/user_text_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_user_name"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/user_text_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_user_email"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorGray"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/profile_user_text_name"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:background="@drawable/style_border_editext"
                        android:hint="@string/profile_user_name"
                        android:maxLines="1"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/profile_user_text_phone"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:background="@drawable/style_border_editext"
                        android:hint="@string/profile_user_phone"
                        android:maxLines="1"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/profile_user_text_lastname"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_edt_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:background="@drawable/style_border_editext"
                        android:hint="@string/profile_user_lastname"
                        android:maxLines="1"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/profile_user_text_status"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_edt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/style_border_editext_block"
                        android:hint="@string/profile_user_status"
                        android:maxLines="1"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/profile_user_text_email"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="20dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:background="@drawable/style_border_editext"
                    android:hint="@string/profile_user_email"
                    android:maxLines="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/user_button_save"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:text="@string/user_edit_save"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>