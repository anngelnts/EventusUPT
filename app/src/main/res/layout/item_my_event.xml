<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorContent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item_my_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_event_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/eventimage"
                android:scaleType="centerCrop"
                android:contentDescription="@string/my_event_image_description"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/my_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_event_date"
                    android:textSize="16sp"
                    android:textColor="@color/colorGrey"
                    />

                <TextView
                    android:id="@+id/my_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_event_title"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>